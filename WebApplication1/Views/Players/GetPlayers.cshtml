@model WebApplication1.Models.PlayerViewModel

@{
    ViewBag.Title = "Create";
}

<h2> @Session["GameName"]</h2>

@using (Html.BeginForm("GetPlayers" , "Players")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
 
       @for (int i = 0; i < (Convert.ToInt32(Session["NumOfPlayers"])); i++)
       {
            @Html.HiddenFor(m => m.players[i].Id)
           <div class="form-group">
            @Html.LabelFor(m => m.players[i].PlayerName, "Player Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.players[i], new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <hr />
       }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Players" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
